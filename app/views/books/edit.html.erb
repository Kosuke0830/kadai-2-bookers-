<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label for="book_title">本のタイトル</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_title">感想</label>
    <%= f.text_area :body %><br>
  </div>
  <div class="field">
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Show",book_path %>
    |
<%= link_to "Back", "/books" %>
